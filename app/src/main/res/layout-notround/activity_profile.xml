<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3_L03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_text3_L03"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/textView4_L03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_text4_L03"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/editText_text2_L03"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textView5_L03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_text5_L03"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/editText_text3_L03"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textView6_L03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_text6_L03"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <ImageButton
            android:id="@+id/imageButton_L03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/picture_frame"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView7_L03"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/textView_text7_L03"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button1_L04"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="@string/button_text1_L04"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button1_L06"
            android:layout_width="148dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="@string/button_text_L06"
            android:textAlignment="center" />

    </LinearLayout>
</ScrollView>